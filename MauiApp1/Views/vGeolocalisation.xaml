<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.vGeolocalisation"
             Title="vGeolocalisation">
    <VerticalStackLayout>
        <Button Text="Geolocation" x:Name="bt_geolocation" Clicked="Geolocalisation_click"></Button>
        <Button Text="Annulation" x:Name="bt_cancel" Clicked="Annulation_click"></Button>
        <Label 
            x:Name="lb_longitude"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            x:Name="lb_latitude"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>