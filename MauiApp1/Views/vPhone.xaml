<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.vPhone"
             Title="vPhone">
    <VerticalStackLayout Spacing="20" Margin="10">
        <Label 
            Text="Info Téléphone"
            VerticalOptions="Center"
            FontSize="22"
            HorizontalOptions="Center" />
        <Label 
    Text="Info Téléphone"
            x:Name="lbPhoneInfo"
    VerticalOptions="Center"
    FontSize="22"
    HorizontalOptions="Center" />

    </VerticalStackLayout>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ecran" Clicked="Ecran_Clicked" IconImageSource="{FontImage Glyph='E', Color=White, Size=22}" />
        <ToolbarItem Text="Batterie" Clicked="Alimentation_clicked" IconImageSource="{FontImage Glyph='B', Color=White, Size=22}" />
    </ContentPage.ToolbarItems>

</ContentPage>